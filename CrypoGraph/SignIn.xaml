<Window x:Class="CrypoGraph.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrypoGraph"
        mc:Ignorable="d"
        Title="Sign In" Height="215" Width="300" Background="Black" Foreground="DarkOrange" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Foreground="Red" Name="errormsg" HorizontalAlignment="Center"/>
        <UniformGrid Rows="2" Columns="2">
            <Label Content="API Key: " Width="100" Height="30"  Foreground="DarkOrange" HorizontalAlignment="Right"/>
            <TextBox Name="keytb" Width="150" Height="30"/>
            <Label Content="API Secret: " Width="100" Height="30"  Foreground="DarkOrange" HorizontalAlignment="Right"/>
            <TextBox Name="secrettb" Width="150" Height="30" />
        </UniformGrid>
        <Button Content="Log In" Click="Button_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
